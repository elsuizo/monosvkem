# Italics {{{
verbatim
if get(g:, "@optionprefix_disable_italic", 0)
  hi Comment cterm=NONE
  hi Folded cterm=NONE
  hi rstEmphasis cterm=NONE
endif
endverbatim
# }}}

# Function definitions 
# default vim syntax files first
# vim-polyglot second
# we'll just keep adding newlines for  other custom files/plugins as we go{{{
verbatim
if get(g:, "@optionprefix_enable_func_defs", 0)
  
  hi pythonfunction                     guifg=#b77fdb
  hi rubyfunction                       guifg=#b77fdb
  hi rustFuncName                       guifg=#b77fdb

  hi luafuncname                        guifg=#b77fdb
  hi jsfunctionkey                      guifg=#b77fdb
  hi cCustomFunc                        guifg=#b77fdb
  hi nimFunction                        guifg=#b77fdb
  hi elixirFunctionDeclaration          guifg=#b77fdb

endif
endverbatim
# }}}
